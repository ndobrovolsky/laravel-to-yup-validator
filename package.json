{
  "name": "laravel-to-yup-validator",
  "version": "0.0.1",
  "author": {
    "name": "Francisco Madeira",
    "email": "xico2k@gmail.com"
  },
  "keywords": [
    "laravel",
    "yup",
    "validation"
  ],
  "repository": "https://github.com/ndobrovolsky/laravel-to-yup-validator",
  "license": "MIT",
  "description": "A package for converting Laravel validation rules to yup js validation rules, making it easy to reuse your existing validation rules and streamline your development process.",
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "scripts": {
    "watch": "tsc --watch",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "prettier -c \"src/**/*.(ts|js)\" --write",
    "build:plugins": "tsc -p tsconfig.plugins.json",
    "build:client": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.commonjs.json && babel dist/cjs/utils/has-php-translations.js --out-file dist/cjs/utils/has-php-translations.js",
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@types/jest": "^27.5.2",
    "babel-jest": "^27.5.1",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "jest": "^27.5.1",
    "laravel-mix": "^6.0.49",
    "prettier": "^2.8.3",
    "source-map": "^0.7.4",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "php-parser": "^3.1.3",
    "yup": "^1.0.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write"
    ],
    "*.js": [
      "prettier --parser=javascript --write"
    ]
  }
}
